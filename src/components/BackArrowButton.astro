---
import BackArrowIcon from '@/icons/BackArrowIcon.astro'

interface Props {
  link: string
  text: string
}

const { link, text } = Astro.props
---

<a
  href={`${link}`}
  class='group relative inline-flex h-[calc(48px+8px)] items-center justify-center rounded-full bg-blue-950/80 border border-blue-950 backdrop-blur-md py-1 pl-6 pr-14 font-medium text-slate-400 hover:text-white'>
  <span class='z-10 pr-2'>{text}</span>
  <div
    class='absolute right-1 inline-flex h-12 w-12 items-center justify-end rounded-full bg-primary/30 transition-[width] group-hover:w-[calc(100%-8px)]'>
    <div class='mr-3.5 flex items-center justify-center'>
      <BackArrowIcon className='w-4 h-4 inline-block' />
    </div>
  </div>
</a>
