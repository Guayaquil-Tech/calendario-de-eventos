---
import InstagramIcon from '@/icons/InstagramIcon.astro'
import LinkedinIcon from '@/icons/LinkedinIcon.astro'
import GithubIcon from '@/icons/GithubIcon.astro'

const socialMedia = [
  {
    icon: InstagramIcon,
    title: 'Instagram',
    link: 'https://www.instagram.com/guayaquiltech/'
  },
  {
    icon: LinkedinIcon,
    title: 'LinkedIn',
    link: 'https://www.linkedin.com/company/guayaquiltech/'
  },
  {
    icon: GithubIcon,
    title: 'GitHub',
    link: 'https://github.com/Guayaquil-Tech'
  }
]
---

<footer class='mx-auto w-full max-w-screen-2xl h-max p-4 text-white lg:px-6'>
  <h4 class='text-center mb-2 text-slate-300'>Encuentr√°nos en</h4>
  <section class='flex justify-center items-center gap-2 mx-auto'>
    {
      socialMedia.map(social => (
        <a
          href={social.link}
          class='w-max p-2 text-slate-300 hover:text-primary transition-colors'
          target='_blank'
          title={social.title}
          rel='noopener'>
          <small class='sr-only'>{social.title}</small>
          <social.icon className='w-8 h-8' />
        </a>
      ))
    }
  </section>
</footer>
