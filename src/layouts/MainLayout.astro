---
import BaseHead from '@/components/BaseHead.astro'
import FooterPage from '@/components/FooterPage.astro'
import BaseBodyLayout from '@/layouts/BaseBodyLayout.astro'

interface Props {
  titlePage: string
  descriptionPage: string
}

const { titlePage, descriptionPage } = Astro.props
---

<!doctype html>
<html lang='es'>
  <BaseHead titlePage={titlePage} descriptionPage={descriptionPage} />
  <BaseBodyLayout>
    <slot />
    <FooterPage slot='footer' />
  </BaseBodyLayout>
</html>
