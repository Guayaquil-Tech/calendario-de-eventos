---
import { Image } from 'astro:assets'
import MainLayout from '@/layouts/MainLayout.astro'
import HeaderPage from '@/components/HeaderPage.astro'

import Communities from '@/data/communities.js'
---

<MainLayout
  titlePage='Comunidades | GUAYAQUIL TECH'
  descriptionPage='Descubre a las comunidades mÃ¡s geniales del mundo Tech'>
  <HeaderPage>
    Listado de <span class='text-primary'>Comunidades</span>
  </HeaderPage>

  <section class='my-8 flex flex-wrap items-center justify-center gap-12 lg:mt-10'>
    {
      Communities.map(co => (
        <a href={co.id} title={co.name}>
          <Image
            class='w-full max-w-[7.5rem] rounded-md cursor-pointer transition-all duration-150 hover:scale-105'
            src={`/images/communities/${co.imagePath}`}
            alt={co.name}
            width='50'
            height='50'
            loading='eager'
          />
        </a>
      ))
    }
  </section>
</MainLayout>
